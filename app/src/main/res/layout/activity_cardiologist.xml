<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/linearColumn"
    android:background="#F6BE00"
    tools:context=".cardiologist"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--cardio-->
            <ImageView
                android:layout_width="143dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/upperlogo" />

            <!--ashok-->
            <ImageView
                android:layout_width="316dp"
                android:layout_height="196dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ashokdata"/>

            <ImageView
                android:layout_width="103dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-220dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ashok"/>

            <Button
                android:id="@+id/ashokbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textColor="#000000"
                android:background="#0000"
                android:layout_marginStart="150dp"
                android:layout_marginTop="65dp"/>

            <!--vijay-->
            <ImageView
                android:layout_width="316dp"
                android:layout_height="196dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/vijaydata"/>

            <ImageView
                android:layout_width="103dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-220dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/vijay"/>

            <Button
                android:id="@+id/vijaybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textColor="#FFFFFF"
                android:background="#0000"
                android:layout_marginStart="150dp"
                android:layout_marginTop="70dp"/>
            <!--yugal-->
            <ImageView
                android:layout_width="316dp"
                android:layout_height="196dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/yugaldata"/>

            <ImageView
                android:layout_width="103dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-215dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/yugal"/>

            <Button
                android:id="@+id/yugalbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textColor="#000000"
                android:background="#0000"
                android:layout_marginStart="150dp"
                android:layout_marginTop="65dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>