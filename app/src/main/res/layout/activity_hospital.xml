<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/linearColumn"
    android:background="#F6BE00"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="143dp"
        android:layout_height="36dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/upperlogo" />
    <!--card-->
    <ImageView
        android:id="@+id/Cardio"
        android:layout_width="318dp"
        android:layout_height="118dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/cardr"/>

    <ImageView
        android:layout_width="159dp"
        android:layout_height="141dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="-140dp"
        android:layout_marginEnd="30dp"

        android:src="@drawable/card"/>



    <!--nephro-->

    <ImageView
        android:layout_width="318dp"
        android:layout_height="118dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"

        android:id="@+id/Nephrologist"
        android:src="@drawable/kidneyr"/>

    <ImageView
        android:layout_width="159dp"
        android:layout_height="141dp"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="-140dp"

        android:layout_marginEnd="30dp"
        android:src="@drawable/kidney"/>


    <!--neuro-->

    <ImageView
        android:layout_width="318dp"
        android:layout_height="118dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/Neurologist"
        android:src="@drawable/neuror"/>

    <ImageView
        android:layout_width="159dp"
        android:layout_height="141dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="-140dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/neuro"/>





</LinearLayout>