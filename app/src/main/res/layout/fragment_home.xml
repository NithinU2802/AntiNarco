<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:id="@+id/linearColumn"
    android:background="#D3D3D3"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="375dp"
                android:layout_height="757dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/homerect"/>

            <ImageView
                android:id="@+id/dicon"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="-500dp"
                android:src="@drawable/dicon" />

            <ImageView
                android:id="@+id/penality"
                android:layout_width="189dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/penality" />

            <ImageView
                android:id="@+id/affects"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/affects" />


            <ImageView
                android:id="@+id/nasha"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/nasha" />

            <ImageView
                android:id="@+id/hosp"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/hosp"/>

            <ImageView
                android:id="@+id/chatbot"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/chatbot"/>

            <ImageView
                android:id="@+id/signin"
                android:layout_width="315dp"
                android:layout_height="56dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/signin"/>



        </LinearLayout>

    </ScrollView>
</LinearLayout>